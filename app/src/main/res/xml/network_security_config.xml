<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuración para PayPal HTTPS -->
    <domain-config cleartextTrafficPermitted="false">
        <!-- PayPal Sandbox URLs -->
        <domain includeSubdomains="true">api.sandbox.paypal.com</domain>
        <domain includeSubdomains="true">api-m.sandbox.paypal.com</domain>
        <domain includeSubdomains="true">www.sandbox.paypal.com</domain>

        <!-- PayPal Production URLs -->
        <domain includeSubdomains="true">api.paypal.com</domain>
        <domain includeSubdomains="true">api-m.paypal.com</domain>
        <domain includeSubdomains="true">www.paypal.com</domain>

        <!-- Tu servidor backend -->
        <domain includeSubdomains="true">social-me-tfg.onrender.com</domain>

        <!-- Configuración de certificados -->
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>

    <!-- Permitir todas las conexiones HTTPS por defecto -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>